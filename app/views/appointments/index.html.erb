<div class="jumbotron" id="custom_jumbo">
    <p id="notice"><%= notice %></p>

    <h1>Appointments</h1>

    <table  class="table table-hover table-bordered border border-dark">
      <thead class="table-light">
        <tr>
          <th>Date</th>
          <th>Comment</th>
          <th>Visited</th>
          <th>Patient</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @appointments.each do |appointment| %>
          <tr>
            <td><%= appointment.date %></td>
            <td><%= appointment.comment %></td>
            <td><%= appointment.visited %></td>
            <td><%= appointment.patient.name.surname %></td>
            <td><%= link_to 'Show', appointment, class: "btn btn-outline-success" %> </td>
            <td><%= link_to 'Edit', edit_appointment_path(appointment), class: "btn btn-outline-info" %></td>
            <td><%= link_to 'Destroy', appointment, class: "btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Appointment', new_appointment_path, class:"btn btn-outline-success" %>

</div>
