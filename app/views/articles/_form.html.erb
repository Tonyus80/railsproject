<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @article) do |form| %>
        <!-- This method count the number of error, in case there is more than one display the word errors plural-->
        <% if @article.errors.any? %>
          <div id="error_explanation">
            <!-- This method prevent from begin saved-->
            <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>
            <ul>
              <% article.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <!-- Execute for article the fun function -->
        <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |fun| %>
          <div class="form-group row">
            <%= fun.label :title, class: "col-2 col-form-label text-dark" %>
            <div class="col-10">
              <%= fun.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
            </div>
          </div>

          <div class="form-group row">
            <!-- Change description label text-dark-->
            <%= fun.label :description, class: "col-2 col-form-label text-dark" %>
            <div class="col-10">  <!-- col-10 lenght of text area Description of article-->
              <!-- rows: 10 size of text area Description of article-->
              <%= fun.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
            </div>
          </div>

          <!-- Button Create article Change button color text-dark-->
          <div class="form-group-row-custom">
            <%= fun.submit class: "btn btn-outline-primary", style: "alignment: right" %>
            <%= link_to "Cancel", articles_path,  class: "btn btn-outline-dark", style: "alignment: right" %>

          </div>
        <% end %>
        </div>

      <% end %>
      </div>
</div>
