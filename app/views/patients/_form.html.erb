<!--  Generated using Simple form gem -->

<%= simple_form_for(@patient) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :surname %>
    <%= f.input :gender, :collection => %w[M F] %>
    <%= f.input :date_of_birth, :label => "Age" %>
    <%= f.input :address %>
    <%= f.input :pps, :label => "PPS" %>
    <%= f.input :medical_card, :collection => %w[YES NO] %>
  </div>


  <div style="display: flex; float: left;">
    <%= f.button :submit , class: "btn btn-success btn-m" %>
  </div>
<% end %>
